<% content_for(:title, @product.name) %>

<h1><%= @product.name %></h1>
<h5>$<%= @product.cost %></h5>
<h5><%= @product.country %></h5>
<%= image_tag @product.image %>

<p><%= link_to 'Edit Product', edit_product_path(@product) %></p>
<p><%= link_to 'Delete Product', product_path(@product), :data => {:confirm => "Are you sure you want to delete this product?", :method => "delete"} %></p>
