<%= render 'layouts/errors', :object => @product %>

<%= form_for @product do |f| %>
  <%= f.text_field :name, :placeholder => 'Name' %>
  <%= f.text_field :country, :placeholder => 'Country of Origin' %>
  <%= f.number_field :cost, :placeholder => 'Cost' %>
  <%= f.text_field :image, :placeholder => 'Image URL' %>
  <%= f.submit %>
<% end %>
