<%= render 'layouts/errors', :object => @post %>

<%= form_for @post do |f| %>
  <%= f.text_field :title, :placeholder => 'Title' %>
  <%= f.text_field :author, :placeholder => 'Author' %>
  <%= f.text_area :content, :placeholder => 'Content', :class => "materialize-textarea" %>
  <%= f.text_field :image, :placeholder => 'Image URL' %>
  <%= f.submit :class => 'btn' %>
<% end %>
